<div class="page-header">
  <h3>Pantries Item #<%= @pantries_item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @pantries_item.user.present? %>
          <a href="/users/<%= @pantries_item.user_id %>">
            <%= @pantries_item.user.username %>
          </a>
        <% end %>
      </dd>

      <dt>Food</dt>
      <dd>
        <% if @pantries_item.food.present? %>
          <a href="/foods/<%= @pantries_item.food_id %>">
            <%= @pantries_item.food.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/pantries_items" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @pantries_item.user %>
        <a href="/pantries_items/<%= @pantries_item.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_pantries_item/<%= @pantries_item.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
