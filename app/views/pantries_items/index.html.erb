<div class="page-header">
  <h1>
    Pantries items
    <a href="/pantries_items/new" class="btn btn-lg btn-success">New Pantries item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Food</th>
        <th>Actions</th>
      </tr>

      <% @pantries_items.each do |pantries_item| %>
      <tr>
        <td>
          <% if pantries_item.user.present? %>
            <a href="/users/<%= pantries_item.user.id %>">
              <%= pantries_item.user.username %>
            </a>
          <% end %>
        </td>
        <td>
          <% if pantries_item.food.present? %>
            <a href="/foods/<%= pantries_item.food.id %>">
              <%= pantries_item.food.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/pantries_items/<%= pantries_item.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == pantries_item.user %>
            <a href="/pantries_items/<%= pantries_item.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_pantries_item/<%= pantries_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @pantries_items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
