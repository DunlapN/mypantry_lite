<div class="page-header">
  <h1>
    Pantries
    <a href="/pantries/new" class="btn btn-lg btn-success">New Pantry</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Food</th>
        <th>Actions</th>
      </tr>

      <% @pantries.each do |pantry| %>
      <tr>
        <td><%= pantry.user_id %></td>
        <td><%= pantry.food_id %></td>
        <td>
          <a href="/pantries/<%= pantry.id %>" class="btn btn-primary">Show</a>
          <a href="/pantries/<%= pantry.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_pantry/<%= pantry.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
