<!-- Validation failure messages -->
<% if @pantry.errors.any? %>
  <% @pantry.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Pantry</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_pantry" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @pantry.user_id %>">
      </div>

      <!-- Label and input for food_id -->
      <div class="form-group">
        <label for="food_id" class="control-label">
          Food
        </label>

        <input type="text" id="food_id" name="food_id" placeholder="Food" class="form-control" value="<%= @pantry.food_id %>">
      </div>

      <button class="btn btn-success">
        Create Pantry
      </button>
      or
      <a href="/pantries">Cancel</a>
    </form>
  </div>
</div>
